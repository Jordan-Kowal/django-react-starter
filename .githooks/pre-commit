#!/bin/sh
set -eu

echo "---------- Git hook: pre-commit ----------"

# Biome (lint and format)
echo ">>> [1/2] Running Biome on frontend"
(cd frontend && yarn biome:check)

# Ruff (imports, lint, and format)
echo ""
echo ">>> [2/2] Running Ruff on backend"
echo "Imports: $(cd backend && ruff check --select I .)"
echo "Lint: $(cd backend && ruff check .)"
echo "Format: $(cd backend && ruff format --check .)"

echo "------------------------------------------"
